<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/themeuser"
    android:background="@drawable/custom_backdialog"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xem danh sách món ăn"
        android:textColor="#000"
        android:textSize="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        android:elevation="10dp">
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:id="@+id/updateBill_spinner"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        android:elevation="10dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginHorizontal="10dp"
            android:hint="Id"
            android:background="@drawable/custom_edittext"
            android:id="@+id/updateBill_Id"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        android:elevation="10dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginHorizontal="10dp"
            android:hint="Quantity"
            android:background="@drawable/custom_edittext"
            android:id="@+id/updateBill_quantity"/>

    </androidx.cardview.widget.CardView>


    <Button
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text="Update Bill"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="#EC2578"
        android:layout_marginBottom="10dp"
        android:id="@+id/updateBillDetail"/>
</LinearLayout>