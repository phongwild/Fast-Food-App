<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:theme="@style/themeuser"
    tools:context=".Fragment.Fragment_Admin.Fragment_Admin_Personal_Information">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="10dp"
        android:background="#EC2578"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center"
            app:civ_border_width="2dp"
            app:civ_border_color="#fff"
            android:id="@+id/Image_Admin"/>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/FullName_admin_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyễn Thiên Thiên"
                android:textColor="#fff"
                android:fontFamily="@font/open_sans"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/role_admin_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin"
                android:textColor="#fff"
                android:fontFamily="@font/open_sans"
                android:textSize="14dp"
                tools:ignore="TextSizeCheck" />
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="16dp">
                <Button
                    android:layout_width="390dp"
                    android:layout_height="60dp"
                    android:background="@android:color/transparent"
                    android:text="Total revenue"
                    android:textColor="#000"
                    android:textSize="19dp"
                    android:id="@+id/TotalRevenue_admin_information"
                    android:drawableLeft="@drawable/money"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="16dp">
                <Button
                    android:layout_width="390dp"
                    android:layout_height="60dp"
                    android:background="@android:color/transparent"
                    android:text="statistical"
                    android:textColor="#000"
                    android:textSize="19dp"
                    android:id="@+id/Statistical_admin_information"
                    android:drawableLeft="@drawable/statistical"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="16dp">
                <Button
                    android:layout_width="390dp"
                    android:layout_height="60dp"
                    android:background="@android:color/transparent"
                    android:text="Change information"
                    android:textColor="#000"
                    android:textSize="19dp"
                    android:id="@+id/Changeinformation_admin_information"
                    android:drawableLeft="@drawable/person_infomation"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="16dp">
                <Button
                    android:layout_width="390dp"
                    android:layout_height="60dp"
                    android:background="@android:color/transparent"
                    android:text="Change password"
                    android:textColor="#000"
                    android:textSize="19dp"
                    android:id="@+id/Changepassword_admin_information"
                    android:drawableLeft="@drawable/key"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="16dp">
                <Button
                    android:layout_width="390dp"
                    android:layout_height="60dp"
                    android:background="@android:color/transparent"
                    android:text="Logout"
                    android:textColor="#000"
                    android:textSize="19dp"
                    android:id="@+id/Logout_admin_information"
                    android:drawableLeft="@drawable/logout"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </ScrollView>

</LinearLayout>