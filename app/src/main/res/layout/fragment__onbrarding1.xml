<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.Fragment_Onbrarding.Fragment_Onbrarding1">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/slide2"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:text="FastFood is Where Your Comfort Food Resides"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Enjoy a fast and smooth food delivery at your doorstep"
        android:textSize="12dp"
        android:textColor="#646464"
        android:gravity="center"
        android:layout_gravity="center"/>

</LinearLayout>