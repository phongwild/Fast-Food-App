<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".List_Activity.Activity_Login.Forget_Password">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/arrow_back"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/back_Forget_Password"/>

    <TextView
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:text="Fill in your bio to get started"
        android:textColor="@android:color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:text="This data will be displayed in your account profile for security"
        android:textColor="#646464"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="#EDEDED"
        android:hint="Email"
        android:padding="10dp"
        android:textColorHint="@android:color/black"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/Forget_Email"
        android:layout_marginTop="70dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:backgroundTint="#EC2578"
        android:text="Next"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/Next_FogetPassword"
        android:layout_marginTop="200dp"/>

</LinearLayout>