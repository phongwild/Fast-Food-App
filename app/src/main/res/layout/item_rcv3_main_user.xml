<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:id="@+id/item_id_rcv3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:id="@+id/item_des_rcv3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:id="@+id/item_type_rcv3"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:src="@drawable/img_cart"
            android:layout_centerVertical="true"
            android:id="@+id/item_img_rcv3"/>
        <TextView
            android:id="@+id/item_name_rcv3"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Chese burger"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/item_img_rcv3"
            android:layout_centerVertical="true"
            android:fontFamily="@font/open_sans"/>

        <RelativeLayout
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/item_name_rcv3">

            <TextView
                android:id="@+id/item_price_rcv3"
                android:layout_width="200dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/open_sans"
                android:text="15.000 Ä‘"
                android:textColor="#EC2578"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/item_btnAdd_rcv3"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_below="@id/item_price_rcv3"
                android:background="@drawable/style_btn"
                android:text="ADD"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:backgroundTint="#EC2578" />
        </RelativeLayout>

    </RelativeLayout>
    
</androidx.cardview.widget.CardView>